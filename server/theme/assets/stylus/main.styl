// Media Queries
// SMALL
@media screen and (min-width: 480px)
  .dl-horizontal
    dt
      width 20%
    dd
      width 75%
  .banner
  .image.banner
    h2
      margin 3rem 0
// MEDIUM
@media screen and (min-width: 768px)
  .skills
    overflow hidden
    .skill
      width 50%
      padding 1.25rem
      float left
  .wrapper
    margin 1%
    overflow hidden

    //column-count 2
    //column-gap 1rem
    //column-fill auto
    //break-inside avoid
    .card
      margin 1%
    .experience
    .education
    .certificates
      width 48%
      //display block
      //width 100%
    .experience
    .education
      float left
    .certificates
      float right

  .header
    height auto
    //border none
    .icon-menu
    .title
      display none
    .menu
      display block

