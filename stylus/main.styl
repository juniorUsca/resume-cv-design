// Media Queries
// SMALL
@media screen and (min-width: 480px)
  .dl-horizontal
    dt
      width 20%
    dd
      width 75%
  .banner
  .image.banner
    h2
      margin 3rem 0
// MEDIUM
@media screen and (min-width: 768px)
  .skills
    overflow hidden
    .skill
      width 50%
      padding 1.25rem
      float left
  .wrapper
    margin 1%
    overflow hidden
    .card
      margin 1%
    .experience
    .certificates
      float left
      width 48%
    
